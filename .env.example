# GMO Coin API
GMO_API_KEY=your_api_key_here
GMO_API_SECRET=your_api_secret_here
GMO_BASE_URL=https://api.coin.z.com/public
GMO_PRIVATE_URL=https://api.coin.z.com/private

# Telegram Bot (for notifications and reports)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Trading Settings
SYMBOL=BTC_JPY
TIMEFRAME=15min
MODE=paper  # paper or live
PREDICTION_HORIZON=4  # 4 periods = 1 hour for 15min candles

# Leverage Settings (margin trading for long/short)
USE_LEVERAGE=true  # Enable margin trading (required for shorting)
LEVERAGE=1.2  # Leverage ratio (1.0-2.0, GMO max is 2x)
MARGIN_CALL_THRESHOLD=0.75  # Margin maintenance ratio

# Risk Management - LONG positions (standard settings)
LONG_RISK_PER_TRADE=0.02  # 2%
LONG_MAX_POSITION_SIZE=0.10  # 10%
LONG_MAX_DAILY_TRADES=3
LONG_CONFIDENCE_THRESHOLD=0.65
LONG_SL_ATR_MULTIPLE=2.0

# Risk Management - SHORT positions (stricter settings)
SHORT_RISK_PER_TRADE=0.015  # 1.5% (smaller risk for shorts)
SHORT_MAX_POSITION_SIZE=0.07  # 7% (smaller positions)
SHORT_MAX_DAILY_TRADES=2
SHORT_CONFIDENCE_THRESHOLD=0.70  # Higher confidence required
SHORT_SL_ATR_MULTIPLE=1.5  # Tighter stop loss

# Global Risk Limits
DAILY_LOSS_LIMIT=0.03  # 3%
MAX_DAILY_TRADES=5

# Model Settings
MODEL_PATH=models/lightgbm_model.joblib

# Database
DB_PATH=data/trading.db

# Training Settings (for local PC)
TRAINING_MONTHS=12
BACKTEST_MONTHS=2
WALKFORWARD_INTERVAL_DAYS=14

# Report Schedule (JST hours)
REPORT_MORNING_HOUR=8
REPORT_NOON_HOUR=12
REPORT_EVENING_HOUR=20
REPORT_WEEKLY_DAY=0  # Monday
REPORT_MONTHLY_DAY=1  # 1st of month

# Take Profit Levels - LONG (R multiples, can let profits run)
LONG_TP_LEVEL_1=1.5
LONG_TP_RATIO_1=0.5
LONG_TP_LEVEL_2=2.5
LONG_TP_RATIO_2=0.3
LONG_TP_LEVEL_3=4.0
LONG_TP_RATIO_3=0.2

# Take Profit Levels - SHORT (R multiples, take profits faster)
SHORT_TP_LEVEL_1=1.0
SHORT_TP_RATIO_1=0.5
SHORT_TP_LEVEL_2=1.5
SHORT_TP_RATIO_2=0.3
SHORT_TP_LEVEL_3=2.5
SHORT_TP_RATIO_3=0.2
